<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:gravity="center"
    tools:context=".ui.welcome.intro.FragmentIntrob">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/onboard_dua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/onboard_dua"
        />

    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/txt_judul"
        android:layout_below="@+id/onboard_dua"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:textColor="@color/WarnaDua"
        android:fontFamily="@font/poppins_bold"
        android:text="Menghitung IMT" />

    <TextView
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_judul"
        android:textSize="18sp"
        android:textColor="@color/WarnaLima"
        android:fontFamily="@font/poppins_light"
        android:text="Ketahui indeks masa tubuh untuk mendaptkan informasi kesehatan"/>

</RelativeLayout>