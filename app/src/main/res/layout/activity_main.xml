<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Masukan Data"
        android:textColor="@color/WarnaTiga"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:clickable="true"
        android:id="@+id/riwayat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Riwayat"
        android:textColor="@color/WarnaDua"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/Judul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Judul"
        android:focusable="true" />

    <TextView
        android:id="@+id/judulnama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Nama"
        android:textColor="@color/WarnaTiga"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Judul" />

    <EditText
        android:fontFamily="@font/poppins_bold"
        android:id="@+id/text_nama"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_edit_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/judulnama" />

    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Gender"
        android:textColor="@color/WarnaTiga"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/text_nama"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />


    <belka.us.androidtoggleswitch.widgets.ToggleSwitch
        android:id="@+id/toggleSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        custom:activeBgColor="@color/WarnaTiga"
        custom:activeTextColor="@color/white"
        custom:cornerRadius="20dp"
        custom:inactiveBgColor="@color/white"
        custom:inactiveTextColor="@color/black"
        custom:textToggleLeft="Pria"
        custom:textToggleRight="Wanita"
        custom:toggleWidth="150dp" />

    <TextView

        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Tinggi"
        android:textColor="@color/WarnaTiga"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/toggleSwitch"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp" />

    <me.angrybyte.numberpicker.view.ActualNumberPicker
        android:id="@+id/height_picker"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        app:bar_width="1dp"
        app:bars_count="30"
        app:controls_color="@color/black"
        app:draw_over_controls="true"
        app:draw_over_text="false"
        app:fast_controls_color="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:max_value="230"
        app:min_value="0"
        app:selection_color="#A0FF3040"
        app:show_bars="true"
        app:show_controls="true"
        app:show_fast_controls="true"
        app:show_highlight="true"
        app:show_text="true"
        app:text_color="@color/WarnaTiga"
        app:text_size="20dp"
        app:value="170" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Berat"
        android:textColor="@color/WarnaTiga"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/height_picker"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <me.angrybyte.numberpicker.view.ActualNumberPicker
        android:id="@+id/weight_picker"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        app:bar_width="1dp"
        app:bars_count="30"
        app:controls_color="@color/black"
        app:draw_over_controls="true"
        app:draw_over_text="false"
        app:fast_controls_color="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:max_value="200"
        app:min_value="0"
        app:selection_color="#A0FF3040"
        app:show_bars="true"
        app:show_controls="true"
        app:show_fast_controls="true"
        app:show_highlight="true"
        app:show_text="true"
        app:text_color="@color/WarnaTiga"
        app:text_size="20dp"
        app:value="60" />

    <Button
        android:id="@+id/button_kalkulasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:background="@drawable/btn_rounded"
        android:fontFamily="@font/poppins_semibold"
        android:text="Kalkulasikan"
        android:textSize="18sp"
        app:backgroundTint="@color/WarnaDua"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircleRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         />


</androidx.constraintlayout.widget.ConstraintLayout>
